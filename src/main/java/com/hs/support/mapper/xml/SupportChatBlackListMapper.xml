<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hs.support.mapper.SupportChatBlackListMapper">


    <select id="pagedQuery" resultType="com.hs.support.SupportChatBlackList">
        select *
        from support_chat_black_list s
        where 1=1
        <if test="ip != null and ip != '' ">
            s.ip=#{ip}
        </if>
        limit #{offset},#{pageSize}
    </select>


    <resultMap id="supportChatBlackListMap" type="java.util.Map">
        <id column="id" property="id" javaType="java.lang.String"/>
        <result column="ip" property="ip"/>
        <result column="no_login_id" property="noLoginId"/>
        <result column="remarks" property="remarks"/>
    </resultMap>

    <select id="pagedQuery1" resultMap="supportChatBlackListMap">
        select s.id,s.ip,s.no_login_id,s.remarks
        from support_chat_black_list s
        where 1=1
        <if test="ip != null and ip != '' ">
            s.ip=#{ip}
        </if>
        limit #{offset},#{pageSize}
    </select>

</mapper>